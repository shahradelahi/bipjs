{
  "name": "bipjs",
  "version": "1.0.3",
  "description": "Create mnemonic and derive addresses from it",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build --clean && tsc --build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "test:browser": "jest --config jest.browser.config.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "pretter": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run pretter && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "mnemonic",
    "bip39",
    "bip32",
    "address",
    "derive",
    "crypto"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shahradelahi/bipjs.git"
  },
  "author": "Shahrad Elahi <shahrad@litehex.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shahradelahi/bipjs/issues",
    "email": "shahrad@litehex.com"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.4.3",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@types/sjcl": "^1.0.30",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "babel-jest": "^29.4.3",
    "eslint": "^8.34.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "base-x": "^4.0.0",
    "bech32": "^2.0.0",
    "bitcoinjs-lib": "^6.1.0",
    "bs58": "^5.0.0",
    "crypto": "^1.0.1",
    "ethers": "^5.7.2",
    "handshake-util": "^1.2.0",
    "sjcl": "^1.0.8"
  }
}
